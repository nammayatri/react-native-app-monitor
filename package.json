{
  "name": "react-native-app-monitor",
  "version": "1.0.0",
  "description": "Comprehensive monitoring solution for React Native applications with metrics, events, logs, and API latency tracking",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "!android/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "monitoring",
    "analytics",
    "logging",
    "metrics",
    "apm",
    "observability",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nammayatri/react-native-app-monitor.git"
  },
  "author": "Namma Yatri <tech@nammayatri.in>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/nammayatri/react-native-app-monitor#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.79.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "prettier": "^2.8.8",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-builder-bob": "^0.30.0",
    "typescript": "^5.8.3"
  },
  "codegenConfig": {
    "name": "RNAppMonitorSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.movingtech.appmonitor"
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": false
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
